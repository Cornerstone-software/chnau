@using MvcFXProductMgr.Models;
@model MvcFXProductMgr.Models.CompanyModel
           
<div class="companyInfo">
    <h2>@ViewBag.Title</h2>
    <form action="/Company/UpdateCompany" method="post">
        <dl>
            <dt>公司名称：</dt>
            <dd>
                <textarea rows="2" cols="25" id="TxtCName" name="Name" class="txtarea">@Model.Name</textarea>
                <span class="errMsg">公司名称为空，请重新输入。</span>
            </dd>
        </dl>
         <dl>
            <dt>公司地址：</dt>
            <dd>
                <textarea rows="2" cols="25" id="TxtCAddress" name="Address" class="txtarea">@Model.Address</textarea>
                <span class="errMsg">公司地址为空，请重新输入。</span>
            </dd>
        </dl>
        <dl>
            <dt>公司网址：</dt>
            <dd>
                <textarea rows="2" cols="25" id="TxtCUrl" name="Url" class="txtarea">@Model.Url</textarea>
                <span class="errMsg">公司网址为空，请重新输入。</span>
            </dd>
        </dl>
        <dl>
            <dt>公司电话：</dt>
            <dd>
                <input  type="text" id="TxtCTel" name="Tel" class="txtTel" value="@Model.Tel" />
                <span class="errMsg">公司电话为空，请重新输入。</span>
            </dd>
        </dl>
        <div class="btn-function">
            <input class="button" name="btnSave" type="submit" value="保存" /> 
            <input class="button" name="btnCancel" type="button" value="取消" /> 
        </div>
    </form>
</div>