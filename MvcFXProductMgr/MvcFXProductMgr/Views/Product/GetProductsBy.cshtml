
@using MvcFXProductMgr.Models;
@model List<ProductModel>

@{
    ViewBag.Title = "查询结果产品信息列表";
}

@if (Model.Count > 0)
{
    <form action=@Url.Action("GetProductsForUpdate", "Product") method="post">
     <h2>产品信息列表</h2>
        <div class="table prodInfo">
            <dl class="tableHeader">
                <dt class="firstCol numCol">序号</dt>
                <dt class="nameCol">产品名称</dt>
                <dt class="weightCol">产品重量</dt>
                <dt class="barCol">条码号</dt>
                <dt class="cernumCol">证书编号</dt>
                <dt class="standardCol">企业标准</dt>
                <dt class="cNameCol">公司名称</dt>
                <dt class="tNameCol">检测机构</dt>
                <dt class="delCol lastCol "></dt>
                <dt class="hide">公司ID</dt>
                <dt class="hide">检测机构ID</dt>
                <dt class="hide">产品类别</dt>
                 <dt class="hide">执行标准</dt>
                 
            </dl>
                @foreach (var item in Model)
                {
                <dl class="tableBody prodDetail">
                    <dt class="firstCol numCol">@HelpMath.sum(Model.IndexOf(item),1)</dt>
                    <dd class="nameCol editor">@item.Name</dd>
                    <dd class="weightCol editor">@item.Weight</dd>
                    <dd class="barCol editor">@item.Barcode</dd>
                    <dd class="cernumCol editor">@item.CerNum</dd>             
                    <dd class="standardCol editor">@item.Standard</dd>
                    <dd  class="cNameCol editor">@item.CName</dd>
                    <dd class="tNameCol editor">@item.TName</dd>
                    <dd class="delCol lastCol btnDel">删除</dd>
                    <dd class="hide"><input name="Id" type="text" value='@item.Id'/></dd>
                    <dd class="hide"><input name="Name" type="text" value='@item.Name'/></dd>
                    <dd class="hide"><input name="Weight" type="text" value='@item.Weight' /></dd>
                    <dd class="hide"><input name="Barcode" type="text" value='@item.Barcode' /></dd>
                    <dd class="hide"><input name="CerNum" type="text" value='@item.CerNum' /></dd>             
                    <dd class="hide"><input name="Standard" type="text" value='@item.Standard' /></dd>
                    <dd class="hide"><input name="CName" type="text" value='@item.CName' /></dd>
                    <dd class="hide"><input name="TName" type="text" value='@item.TName' /></dd>
                    <dd class="hide"><input name="CId" type="hidden" value="@item.CId" /></dd>
                    <dd class="hide"><input name="TId" type="hidden" value="@item.TId" /></dd>
                    <dd class="hide"> <input name="Category" type="hidden" value="@item.Category" /></dd>
                    <dd class="hide"><input name="Price" type="hidden" value="@item.Price" /></dd>
                    <dd class="hide"><input name="MainStone" type="text" value='@item.MainStone' /></dd>
                    <dd class="hide"><input name="MainStoneCarats" type="text" value='@item.MainStoneCarats'/></dd>
                    <dd class="hide"><input name="MainStoneClarity" type="text" value='@item.MainStoneClarity'/></dd>
                    <dd class="hide"><input name="MainStoneColor" type="text" value='@item.MainStoneColor'/></dd>
                    <dd class="hide"><input name="Size" type="text" value='@item.Size'/></dd>    
                    <dd class="hide"><input name="TenorInGold" type="text" value='@item.TenorInGold'/></dd>                      
                </dl>                  
                }  
         </div>
          <div class="">
            <input class="btn btnSave" name="Save" value="修改" type="submit" />          
            <input class="btn btnDel" id="delProductBtn" name="Delete" type="button" value="删除" />           
         </div>
    </form>
}
else
{
    <div>没有查询记录</div>    
}
 <div class="back">@Html.ActionLink("返回产品查询", "GetProducts", "Product")</div>