@{
    ViewBag.Title = "AddProducts";
    
}
<form  action='@Url.Action("Upload","Product")' method="post" enctype="multipart/form-data"> 
    <div class="file-box">

	    <input type='text' name='textfield' id='textfield' class='txt' /> 
	    <input type='button' class='btn' value='浏览...' /> 
	    <input type="file" name="fileField" class="file" id="fileField" size="28" onchange="document.getElementById('textfield').value=this.value;" accept=".xls,.xlsx"/>
	    <input type="submit" name="submit" class="btn" value="确认上传" /> 

    </div>
    <div class="cinfo">
        <dl>
            <dt>公司信息：</dt>
            <dd>
               
               @Html.DropDownList("Company", ViewData["Company"] as SelectList)
            </dd>
        </dl>
        <dl>
            <dt>检测机构：</dt>
            <dd>
                @Html.DropDownList("TestingOrg", ViewData["TestingOrg"] as SelectList)
            </dd>
        </dl>
        <dl>
            <dt>执行标准：</dt>
            <dd>
                <input type="checkbox" name="Standard" value="Q/ZJZB 001-2015" checked="checked"/> Q/ZJZB 001-2015 
                <input type="checkbox" name="Standard" value="GB 11887"/> GB 11887
                <input type="checkbox" name="Standard" value="GB/T 18043"/> GB/T 18043  
            </dd>
        </dl>
            <dl>
            <dt>产品类别：</dt>
            <dd>
                <input type="radio" name="Category" value="黄金" checked="checked"/> 黄金
                <input type="radio" name="Category" value="3D硬金"/> 3D硬金 
                <input type="radio" name="Category" value="金750"/> 金750
                <input type="radio" name="Category" value="金916"/> 金916
            </dd>
        </dl>               
    </div>
</form> 