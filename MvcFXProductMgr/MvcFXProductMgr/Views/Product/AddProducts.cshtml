@{
    ViewBag.Title = "AddProducts";
    
}

<div class="file-box"> 
	<form  action="/Product/Upload" method="post" enctype="multipart/form-data"> 
	<input type='text' name='textfield' id='textfield' class='txt' /> 
	<input type='button' class='btn' value='浏览...' /> 
	<input type="file" name="fileField" class="file" id="fileField" size="28" onchange="document.getElementById('textfield').value=this.value;" accept=".xls,.xlsx"/>
	<input type="submit" name="submit" class="btn" value="上传" /> 
	</form> 
</div>
