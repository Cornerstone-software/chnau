<div class="advertInfo">
    <h2>@ViewBag.Title</h2>
    <form action="/Advertment/CreateNewAdvertment" method="post">
        <dl>
            <dt>广告语：&nbsp;&nbsp;&nbsp;</dt>
                <textarea rows="2" cols="25" type="text" id="TxtCName" name="Name" class="txtarea"></textarea>
                <span class="errMsg">广告语为空，请重新输入。</span>
            </dd>
        </dl>
         
        <dl>
            <dt>广告网址：</dt>
            <dd>
                <textarea rows="2" cols="25" type="text" id="TxtCUrl" name="Url" class="txtarea"></textarea>
                <span class="errMsg">广告网址为空，请重新输入。</span>
            </dd>
        </dl>
        
        <div class="btn-function">
            <input class="button" name="btnSave" type="submit" value="保存" /> 
            <input class="button" name="btnCancel" type="button" value="取消" /> 
        </div>
    </form>
   
</div>


