@model MvcFXProductMgr.ViewModels.LogViewModel
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<div class="table loginfo">
 @if (Model.LogList.Count > 0)
 {
    <dl class="tableHeader" >
        <dt  class="firstCol">日志ID</dt>
        <dt>操作员</dt>
        <dt>操作时间</dt>
        <dt class="lastCol">操作内容</dt>
    </dl> 
     foreach (var item in Model.LogList)
     {
        <dl class="tableBody">
            <dd class="firstCol">@item.Id</dd>
            <dd>@item.Name</dd>
            <dd>@item.Date.ToString()</dd>
            <dd class="lastCol">@item.Content</dd>
        </dl>
     }
 }
 else { 
     <p>没有操作日志记录</p>
 }
      
</div>