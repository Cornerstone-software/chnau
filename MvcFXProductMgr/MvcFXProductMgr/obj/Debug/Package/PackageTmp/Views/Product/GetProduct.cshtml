
@using MvcFXProductMgr.Models;
@model ProductModel
@{
    Layout = "~/Views/Shared/_MLayout.cshtml";
    ViewBag.Title = "单品信息";
}

<div class="plogo"><img src=@ViewData["ImgPath"] /></div>
<div class="pdetail">
    <div>
        产品名称：@Model.Name
    </div>
     @if (Model.Category.Contains("Au"))
     {
         <div>产品质量：@Model.Weight 克</div>
         
     }
     else { 
        <div>产品重量：@Model.Weight 克</div>
     }
    <div>
        条码：@Model.Barcode
    </div>
    @if (Model.Category.Contains("钻石"))
    {
        <div> 主石：@Model.MainStone</div>
        <div> 主石重量：@Model.MainStoneCarats ct</div>
        <div> 主石净度：@Model.MainStoneClarity</div>
        <div> 主石颜色：@Model.MainStoneColor</div>
    }
    <div>
        证书编号：@Model.CerNum
    </div>
    @if (Model.Category.Contains("钻石") && Model.Size != 0)
    {
        <div> 尺寸：@Model.Size</div>
    }
    else if (Model.Category.Contains("黄金"))
    {  
        <div> 含金量：@Model.TenorInGold ‰ </div>
    }
    else if (Model.Category.Contains("Au"))
    {
        <div> 备注：@Model.CerNum</div>
    }
    else
    {
        <div> 备注：@Model.Remarks</div>
    }
 @if (Model.Category.Contains("黄金"))
 {
    <div>
        企业标准：@Model.Standard
    </div>
 }
 else if (!Model.Category.Contains("硬金"))
 { 
    <div>
        执行标准：@Model.Standard
    </div>
 }
    <div>
        公司名称：@Model.CName
    </div>
    <div>
        公司地址：@Model.CAddress
    </div>
    <div>
        客服电话：@Model.CTel
    </div>
    <div>
        公司网址：@Model.CUrl
    </div>
    <div>
        检测机构：@Model.TName
    </div>
    <div>
    <a href="@Model.TUrl">检测网址：@Model.TUrl
    </a>
    </div>
    <div>电话：@Model.TTel</div>
    <div id="barCodeCanvas">
        <input id="barCode" value="@Model.Barcode" type="hidden"/>
        <div id="barcodeTarget" class="barcodeTarget"></div>
    </div>
   

</div>

<div class="advertment">
        <a href="http://www.chnau99999.com/Emoji.html">中国黄金Emoji系列新品重磅上市！<br>http://www.chnau99999.com/Emoji.html</a>
    </div>